{{> header}}

<div class="container mt-5">
  <h2 class="display-4 text-center">Classes for {{course.title}}</h2>
  <p class="text-center">{{course.description}}</p>

  <div class="row">
    {{#course.classDates}}
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">{{day}} - {{date}}</h5>
            <p class="card-text">{{time}}</p>
            <p><strong>Location:</strong> {{location}}</p>

            <!-- If the user is logged in, show the 'Booked' button after booking -->
            {{#session.user}}
              {{#course.isEnrolled}}
                <span class="btn btn-success">Booked</span>
              {{/course.isEnrolled}}

              {{^course.isEnrolled}}
                <a href="/courses/classes/{{course._id}}/enrol/{{date}}" class="btn btn-primary">Book</a>
              {{/course.isEnrolled}}
            {{/session.user}}
          </div>
        </div>
      </div>
    {{/course.classDates}}
  </div>

  <p class="text-center mt-4">
    <a href="/organiser/dashboard" class="btn btn-secondary">Back to Dashboard</a>
  </p>
</div>

{{> footer}}