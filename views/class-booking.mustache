{{> header}}

<div class="container mt-5">
  <h2 class="display-4 text-center">Book your class for {{course.title}}</h2>
  <p class="text-center">{{course.description}}</p>

  {{#alreadyBooked}}
    <p class="text-center alert alert-success">You have already booked this class.</p>
  {{/alreadyBooked}}

  {{^alreadyBooked}}
    <form action="/courses/classes/{{course._id}}/booking/{{classId}}" method="POST">
    <div class="form-group">
      <label for="username">Name:</label>
      <input type="text" id="username" name="username" class="form-control" required>
    </div>
    
    <div class="form-group">
      <label for="email">Email:</label>
      <input type="email" id="email" name="email" class="form-control" required>
    </div>
      <button type="submit" class="btn btn-primary">Book</button>
    </form>
  {{/alreadyBooked}}

  <p class="text-center mt-4">
    <a href="/courses/classes/{{course._id}}" class="btn btn-secondary">Back to Class</a>
  </p>
</div>

{{> footer}}
