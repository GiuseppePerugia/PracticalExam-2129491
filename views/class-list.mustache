{{> header}}

<h2 class="text-center mt-4">Class List: {{course.title}}</h2>
<p class="text-center">{{course.description}}</p>

<!-- Back Button -->
<div class="text-center my-3">
  <a href="/organiser/dashboard" class="btn btn-secondary">Back to Dashboard</a>
</div>

{{#enrolments.length}}
  <div class="container mt-4">
    <h3>Enrolled Students</h3>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
        </tr>
      </thead>
      <tbody>
        {{#enrolments}}
          <tr>
            <td>{{name}}</td>
            <td>{{email}}</td>
          </tr>
        {{/enrolments}}
      </tbody>
    </table>
  </div>
{{/enrolments.length}}

{{^enrolments.length}}
  <div class="alert alert-warning mt-4 text-center">No students enrolled yet.</div>
{{/enrolments.length}}

{{> footer}}